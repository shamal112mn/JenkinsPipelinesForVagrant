def lname = "Jonson"

def callLastname(lname){
	echo lname
}

properties([
    parameters([
        choice(choices: ['Peter', 'John', 'Mary', 'Cart'], 
        description: 'first name', name: 'fname')
        ])
    ])

pipeline{
    agent any
    stages{
        stage("Build"){
            steps{

                sh ' echo $fname'
				script{
					callLastname(lname)
				}
            }
        }
    }
}